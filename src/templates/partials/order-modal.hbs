<section id="order-modal">

    <!-- Modal -->
    <div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header p-0">
                    <p class="modal-title">Sifariş et</p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fal fa-times" aria-hidden="true"></i>
                    </button>
                </div>
                <div class="modal-body p-0">
                    <form id="order-form">
                        <div class="form-group">
                            <label for="product-name">Məhsulun adı</label>
                            <input type="text" class="form-control" name="product-name" id="product-name"
                                placeholder="Daxil edin">

                        </div>
                        <div class="form-group error">
                            <label for="phone">Mobil nömrə <span>*</span></label>
                            <div class="input-icon">
                                <input class="form-control" type="text" id="phone" name="phone" required="true"
                                    pattern="[+][9]{2}[4] [0-9]{2} [0-9]{3} [0-9]{2} [0-9]{2}"
                                    placeholder="+994 00 000 00 00">
                                <i class="fas fa-mobile-alt"></i>
                                <p class="error-message">Xəta baş verdi.</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail <span>*</span></label>
                            <div class="input-icon">
                                <input type="email" class="form-control" id="email" name="email" required="true"
                                    placeholder="mail@email.com">
                                <i class="far fa-envelope"></i>
                            </div>
                        </div>
                        <button type="submit" class="btn proff-btn w-100 mt-2" data-toggle="modal"
                     data-target="#successModal"  data-dismiss="modal">SİFARİŞ ET</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>